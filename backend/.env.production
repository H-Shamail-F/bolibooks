# BoliBooks Backend Production Configuration
# Copy this file to .env and customize for your deployment

# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ================================
# DATABASE CONFIGURATION
# ================================
# For SQLite (default)
DATABASE_URL=./database.sqlite

# For PostgreSQL (uncomment and configure)
# DATABASE_URL=postgresql://username:password@localhost:5432/bolibooks

# For MySQL (uncomment and configure)
# DATABASE_URL=mysql://username:password@localhost:3306/bolibooks

# Database Options
DB_FORCE_SYNC=false
DB_ALTER_SYNC=false
DB_LOGGING=false

# ================================
# SECURITY CONFIGURATION
# ================================
# IMPORTANT: Change this to a unique, secure secret
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CLIENT_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ================================
# COMPANY DEFAULT SETTINGS
# ================================
DEFAULT_COMPANY_NAME=BoliBooks
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=10
DEFAULT_TIMEZONE=UTC

# ================================
# EMAIL CONFIGURATION
# ================================
# SMTP Settings for sending emails (invoices, receipts, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=BoliBooks
SMTP_FROM_EMAIL=noreply@yourdomain.com

# ================================
# PAYMENT CONFIGURATION
# ================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=live
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ================================
# API RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=warn
LOG_FILE=./logs/bolibooks.log
ENABLE_REQUEST_LOGGING=false

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ================================
# FEATURES CONFIGURATION
# ================================
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_MULTI_TENANCY=true
ENABLE_SUBSCRIPTION_BILLING=true

# ================================
# PERFORMANCE CONFIGURATION
# ================================
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# ================================
# MONITORING CONFIGURATION
# ================================
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=true
METRICS_PATH=/metrics

# ================================
# SSL/TLS CONFIGURATION
# ================================
# If running HTTPS directly (not recommended - use reverse proxy)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# ================================
# EXTERNAL SERVICES
# ================================
# Google Analytics
GOOGLE_ANALYTICS_ID=

# Sentry Error Tracking
SENTRY_DSN=

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ================================
# DEVELOPMENT/DEBUG OPTIONS
# ================================
# Only enable in development
DEBUG_SQL=false
DEBUG_ROUTES=false
ENABLE_CORS_DEBUG=false
