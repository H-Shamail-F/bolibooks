# BoliBooks Frontend Production Configuration
# Copy this file to .env and customize for your deployment

# ================================
# API CONFIGURATION
# ================================
# Backend API URL (change to your domain)
REACT_APP_API_URL=https://api.yourdomain.com
# or if API is on same domain: REACT_APP_API_URL=https://yourdomain.com/api

# Base URL for the frontend application
REACT_APP_BASE_URL=https://yourdomain.com

# API Version (if applicable)
REACT_APP_API_VERSION=v1

# ================================
# BRANDING CONFIGURATION
# ================================
REACT_APP_COMPANY_NAME=Your Company Name
REACT_APP_LOGO_URL=/assets/logo.png
REACT_APP_FAVICON_URL=/favicon.ico
REACT_APP_BRAND_COLOR=#3B82F6

# Application Title (appears in browser tab)
REACT_APP_TITLE=BoliBooks - Business Management

# Meta Description for SEO
REACT_APP_DESCRIPTION=Complete business management solution for invoicing, inventory, and point of sale

# ================================
# FEATURES CONFIGURATION
# ================================
# Enable/disable major features
REACT_APP_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_MULTI_CURRENCY=true
REACT_APP_ENABLE_SUBSCRIPTIONS=true
REACT_APP_ENABLE_POS=true
REACT_APP_ENABLE_INVENTORY=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_CUSTOMER_PORTAL=true

# Default Settings
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_TIMEZONE=UTC

# ================================
# PAYMENT CONFIGURATION
# ================================
# Stripe Configuration (Public key only)
REACT_APP_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here

# PayPal Configuration
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id_here
REACT_APP_PAYPAL_CURRENCY=USD

# ================================
# ANALYTICS & TRACKING
# ================================
# Google Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Google Tag Manager (optional)
REACT_APP_GTM_ID=GTM-XXXXXXX

# Facebook Pixel (optional)
REACT_APP_FB_PIXEL_ID=

# Hotjar (optional)
REACT_APP_HOTJAR_ID=

# ================================
# EXTERNAL SERVICES
# ================================
# Google Maps API (for address autocomplete)
REACT_APP_GOOGLE_MAPS_API_KEY=

# Mapbox (alternative to Google Maps)
REACT_APP_MAPBOX_ACCESS_TOKEN=

# Pusher (for real-time notifications)
REACT_APP_PUSHER_APP_KEY=
REACT_APP_PUSHER_CLUSTER=

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
REACT_APP_ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,xls,xlsx

# ================================
# UI/UX CONFIGURATION
# ================================
# Theme Configuration
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#3B82F6
REACT_APP_SECONDARY_COLOR=#10B981

# Layout Options
REACT_APP_SIDEBAR_COLLAPSED=false
REACT_APP_SHOW_BREADCRUMBS=true
REACT_APP_SHOW_TOOLTIPS=true

# ================================
# LOCALIZATION
# ================================
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de
REACT_APP_DEFAULT_LOCALE=en-US

# ================================
# PWA CONFIGURATION
# ================================
REACT_APP_PWA_ENABLED=true
REACT_APP_PWA_NAME=BoliBooks
REACT_APP_PWA_SHORT_NAME=BoliBooks

# ================================
# PERFORMANCE CONFIGURATION
# ================================
# Enable/disable features for performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_CACHING=true

# Bundle Analysis (for development)
REACT_APP_ANALYZE_BUNDLE=false

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
# Only for development builds
REACT_APP_DEBUG_MODE=false
REACT_APP_SHOW_DEBUG_INFO=false

# Skip preflight check (if needed)
SKIP_PREFLIGHT_CHECK=false

# ================================
# BUILD CONFIGURATION
# ================================
# Build optimization
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Public URL (if deploying to subdirectory)
PUBLIC_URL=/

# ================================
# SECURITY CONFIGURATION
# ================================
# Content Security Policy
REACT_APP_CSP_ENABLED=true

# HTTPS Enforcement (handled by server usually)
HTTPS=false

# ================================
# NOTIFICATION CONFIGURATION
# ================================
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_NOTIFICATION_SOUND=true

# ================================
# CUSTOMIZATION
# ================================
# Custom CSS file path
REACT_APP_CUSTOM_CSS=/assets/custom.css

# Custom JavaScript file path
REACT_APP_CUSTOM_JS=/assets/custom.js

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# Intercom (customer support)
REACT_APP_INTERCOM_APP_ID=

# Crisp Chat (alternative)
REACT_APP_CRISP_WEBSITE_ID=

# Zendesk
REACT_APP_ZENDESK_KEY=

# ================================
# SOCIAL MEDIA
# ================================
REACT_APP_SOCIAL_TWITTER=https://twitter.com/yourcompany
REACT_APP_SOCIAL_FACEBOOK=https://facebook.com/yourcompany
REACT_APP_SOCIAL_LINKEDIN=https://linkedin.com/company/yourcompany

# ================================
# CONTACT INFORMATION
# ================================
REACT_APP_SUPPORT_EMAIL=support@yourdomain.com
REACT_APP_SUPPORT_PHONE=+1-800-123-4567
REACT_APP_COMPANY_ADDRESS=123 Business St, City, State 12345
